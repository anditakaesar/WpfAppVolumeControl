<Window x:Name="MainWindow1" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Volume Control" Height="100" Width="500" ResizeMode="CanMinimize" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Slider x:Name="MainSlider" Margin="30,19,30,0" Maximum="100" SmallChange="1" Cursor="Arrow" Height="18" VerticalAlignment="Top" ValueChanged="MainSlider_ValueChanged" AutoToolTipPlacement="BottomRight" IsSnapToTickEnabled="True"/>
        <TextBlock x:Name="MainVolumeText" HorizontalAlignment="Center" Margin="0,42,0,0" TextWrapping="Wrap" Text="TextBlock" Height="16" VerticalAlignment="Top" TextAlignment="Center"/>
    </Grid>
</Window>
